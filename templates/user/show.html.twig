{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ user.lastname }} {{ user.firstname }}</h1>
    <div>
        <img src="../img/{{ user.image }}" alt="Photo">
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Contrat</th>
                <td>{{ user.contrat }}</td>
            </tr>
            <tr>
                <th>Fin de contrat</th>
                <td>
                    {% if user.dateEnd== null %}
                        Aucune
                    {% else %}
                        {{ user.dateEnd|date('Y-m-d') }}
                    {% endif %} 
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">Retour Ã  l'annuaire</a>
    {% if is_granted('ROLE_RH') %}
        <a class='btn btn-jaune' href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
        {{ include('user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
